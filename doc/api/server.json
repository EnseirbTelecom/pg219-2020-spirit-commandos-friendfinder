{
  "title": "FriendFinder",
  "description": "serveur d'une application mobile pour la géolocalisation des amis",
  "version": "1.0.1",
  "paths": {
    "/signup": {
      "post": {
        "description": "l'inscription d'un nouvel utilisateur",
        "parameters": {
          
        }
        },
        "responses": {
          "200": {          
            "description": "retourne l'identifiant crypté de l'utilisateur qui vient d'être créé",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/token"
                  }
                }
              }
            }
          }
        }
      }
    }, 
    "/signin": {
      "post": {
        "description": "l'authentification d'un utilisateur",
        "responses": {
          "200": {          
            "description": "retourne l'identifiant crypté de l'utilisateur existant dans la BDD",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/token"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/position/{token}": {
      "get": {
        "description": "Ajout d'une nouvelle position active dans la BDD",
        "responses": {
          "200": {          
            "description": "retourne la nouvelle position active créée dans la BDD",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/position"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "token": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "position": {
        "type": "object",
        "properties": {
          "latitude": {
            "type": "integer",
            "format": "int64"
          },
          "longitude": {
            "type": "integer"
          },
          "date_d_activation": {
            "type": "string"
          },
          "heure_d_activation": {
            "type": "string"
          },
          "user": {
            "type": "string"
          },
          "status": {
            "type": "string"
          } 
        }
      }
    }
  }
}